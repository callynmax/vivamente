}

/* Seções */
section {
    margin-bottom: 20px;
}

section h2 {
    color: #28a745;
    border-bottom: 2px solid #28a745;
    padding-bottom: 5px;
}

ul {
    margin: 10px 0;
    padding: 0 20px;
}

ul li {
    list-style-type: disc;
    margin-bottom: 5px;
}

/* Botão Voltar */
.btn {
